@model MySecondBrain.Application.ViewModels.DossierDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="site-blocks-cover inner-page-cover overlay" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">

            <div class="col-md-10" data-aos="fade-up" data-aos-delay="400">

                <div class="row justify-content-center mt-5">
                    <div class="col-md-8 text-center">
                        <h1>@Model.Dossier.Nom</h1>
                        <p class="mb-0">@Model.Dossier.IddossierParent</p>

                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <p>
                    <h3>Id Dossier Parent</h3>
                    @Model.Dossier.IddossierParent

                </p>
                <p>
                    <a asp-action="Edit" asp-route-id="@Model.Dossier.Iddossier" class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit">Modifier le dossier</a>
                </p>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index" asp-controller="Note" class="btn btn-primary btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="" data-original-title="Back">Back</a>
</div>
